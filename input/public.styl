.w
	max-width 1032px
	width 100%
	margin 0 auto
body{
	font-size: 100%;
	font-family:'fzltzh','Arial','microsoft yahei';
}
@font-face {
	font-family: 'fzltzh';  /*给自定义字体命名*/
	src: url('../font/_gbk.woff') format('woff'),
	url('../font/_gbk.ttf') format('truetype'),
	url('../font/_gbk.svg#webfontjKg17VrE') format('svg');
}

.header 
	height 210px
	background url('../img/hico2.png') center 18px no-repeat ,
	url('../img/hico1.png') center top /1600px 100% no-repeat
	.logo
	.sub-logo
		display inline-block
		margin-top 49px
		height 110px
	.logo
		width 340px
		background url('../img/hico3.png') center center/100% auto no-repeat
	.sub-logo
		width 378px
		margin-left 20px
		background url('../img/hico4.png') center center/100% auto no-repeat
	.nav
		padding-top 2px
		box-sizing border-box
		height 36px
		font-size 14px
		color #473728
		line-height 36px
		text-align center
		background url('../img/hico5.png') center top no-repeat
		span
			display inline-block
			height 36px
			padding 0 34px
			+span
				background url('../img/hico7.png') left center no-repeat

.main
	background url('../img/hico9.png') center top no-repeat
	.banner	
		.swiper-button-next,
		.swiper-button-prev
			width 47px
			height 70px
			margin-top -(@height/2)px
			background-size 100% 100%
			background-position 0 0
		.swiper-button-next
			right 0
			background-image url(../img/hico27.png)
		.swiper-button-prev
			left 0
			background-image url(../img/hico26.png)
		.swiper-container
			a
			img
				display block
				width 100%
	.section
		background url('../img/hico17.png') center 8px no-repeat,
		url('../img/hico18.png') center bottom 8px no-repeat,
		url('../img/hico25.png') center 0 no-repeat,
		url('../img/hico1.png') left top repeat
		h2
			width 100%
			padding 70px 45px 62px
			margin-left -45px
			font-size 22px
			color #ffffd1
			text-transform uppercase
			letter-spacing 3px
			text-align center
			line-height 50px
			background url('../img/hico19.png') center 70px no-repeat
		.content
			padding 0 30px
			overflow hidden
			background url('../img/hico21.png') center top no-repeat
			h3
				margin 18px 0 0 16px
				padding-left 25px
				line-height 40px
				font-size 24px
				color #5e5b48
				font-weight bold
				height 56px
				background url(../img/hico28.png) left center no-repeat
			.row
				padding 0 40px 0 30px
				img
					display block
				.left
					float left
				.right
					float right
					width 640px
					p
						padding-bottom 12px
						font-size 18px
						color #605c4b
						line-height 2
						background url(../img/hico23.png) left bottom no-repeat
					.tips
						margin-top 15px
						padding-top 22px
						height 102px
						text-align center
						font-size 18px
						color #434135
						line-height 1.5
						background url(../img/hico24.png) center top /100%  auto no-repeat
		.quick-browse
			padding 44px 30px 80px
			h3
				height 46px
				font-size 24px
				color #433426
				line-height 46px
				background url(../img/hico38.png) right center no-repeat
			.wrap
				padding-left 20px
				height 170px
				background url(../img/hico29.png) 0 0 no-repeat
				h4
					font-size 18px
					color #c3af82
					line-height 40px
					text-transform uppercase
					background url(../img/hico39.png) left bottom no-repeat
				.swiper-container
					padding 10px 0
					height 115px
					box-sizing border-box
					margin-left 44px
					width 790px
					a
					img
						display block
						margin 0 auto
				.swiper-button-next,
				.swiper-button-prev
					width 15px
					height 35px
					margin-top -(@height/2)px
					background-size auto auto
					background-position 0 0
				.swiper-button-next
					right 80px
					background-image url(../img/hico37.png)
				.swiper-button-prev
					left 10px
					background-image url(../img/hico36.png)


.footer
	padding-top 20px
	height 194px
	box-sizing border-box
	background url(../img/hico40.png) center top no-repeat
	a
		display block
		img
			display block
			margin 0 auto
	p
		padding-top 10px
		text-align center
		font-size 16px
		color #dedcd0
		line-height 1.5
